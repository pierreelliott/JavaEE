<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletAccueil</servlet-name>
        <servlet-class>controleur.ServletAccueil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletConnexion</servlet-name>
        <servlet-class>controleur.ServletConnexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCarte</servlet-name>
        <servlet-class>controleur.ServletCarte</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletInscription</servlet-name>
        <servlet-class>controleur.ServletInscription</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUtilisateur</servlet-name>
        <servlet-class>controleur.ServletUtilisateur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPanier</servlet-name>
        <servlet-class>controleur.ServletPanier</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCommande</servlet-name>
        <servlet-class>controleur.ServletCommande</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAccueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConnexion</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCarte</servlet-name>
        <url-pattern>/carte</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInscription</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUtilisateur</servlet-name>
        <url-pattern>/utilisateur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPanier</servlet-name>
        <url-pattern>/panier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCommande</servlet-name>
        <url-pattern>/commande</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>
